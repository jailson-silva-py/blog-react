{
  "compilerOptions": {
    /* Target e libs */
    "target": "ES2020",
    "module": "ESNext",

    /* JSX em React 17+ */
    "jsx": "react-jsx",

    /* Resolução de módulos e interoperabilidade */
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Segurança e qualidade */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Migração gradual */
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true,

    /* Não gera arquivos .js de saída (só checa tipos) */
    "noEmit": true,

    /* Reconhece definições de tipos de testes e Node */
    "types": [
      "jest",
      "vite/client",
      "vitest/globals",
      "node",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "src",
    "cypress/**/*.ts",
    "cypress/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
